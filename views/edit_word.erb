<h2>Edit <%= @word.name %></h2>
<form action="/home_page/<%=@word.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
    <label for="word">Enter New Spelling for "<%= @word.name %>"</label>
    <input type="text" name="word">
  </div>
  <button type="submit">Edit Word</button>
</form>

<form class="" action="/home_page/<%=@word.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
<h5>Do You Wish to Delete the Word?</h5>
<button type="submit" name="button">Yes, Delete</button>
</form>
